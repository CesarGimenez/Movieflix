
<div class="w-100 banner">
  <img src= <%= @movie_rand.img %> alt="" class="w-100">
  <div class="description">
  <h2><%= @movie_rand.title %> <i class="far fa-star"></i> <%= @movie_rand.rate %></h2>
  <p><%= @movie_rand.description %></p>
  <%= link_to "Ver mas", @movie_rand, class:"link" %>
  </div>
</div>
<div class="container">
  <h1>Lo mas nuevo</h1>
  <div class="row">
    <% @movie.each do |movie| %>
    <div class="card col-4">
      <div class="card-header bg-dark text-light">
        <h3><%= movie.title %></h3>
        <h3><i class="fas fa-star"></i> <%= movie.rate %></h3>
      </div>
      <div class="card-body">
        <img src=<%= movie.img %> alt="" class="card-img" />
      </div>
      <div class="card-footer">
        <p><%= movie.created_at %></p>
        <%= link_to "Ver mas", movie, class:"link"%>
      </div>
    </div>
    <% end %>
  </div>


  <h1>Mejores 10 valoradas</h1>
  <div class="row">
    <% @movie_rate.each do |movie| %>
    <div class="card col-4">
      <div class="card-header bg-dark text-light">
        <h3><%= movie.title %></h3>
        <h3><i class="fas fa-star"></i> <%= movie.rate %></h3>
      </div>
      <div class="card-body">
        <img src=<%= movie.img %> alt="" class="card-img" />
      </div>
      <div class="card-footer">
        <p><%= movie.created_at %></p>
        <%= link_to "Ver mas", movie, class:"link"%>
      </div>
    </div>
    <% end %>
  </div>
</div>

