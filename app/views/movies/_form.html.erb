<%= form_with(model: @movie, local:true) do |form| %>

    <div class="container">
        <div class="form-group">
            <%= form.label :title %>
            <%= form.text_field :title, class:"form-control" %>
        </div>
        <div class="form-group">
            <%= form.label :description %> 
            <%= form.text_area :description, class:"form-control" %>
        </div>
        <div class="form-group">
            <%= form.label :img %>
            <%= form.text_field :img, class:"form-control" %>
        </div>
        <div class="form-group">
            <%= form.label :rate %>
            <%= form.number_field :rate, class:"form-control", step: 0.1, min: 0 , max:5 %>
        </div>
        <%= form.submit %>
    </div>
    
<% end %>